<Window x:Class="Quick_Reduct_Visualisation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quick_Reduct_Visualisation"
        mc:Ignorable="d"
        Title="Quick-Reduct-Visualisation" Height="450" Width="800">
    <Grid>
        <Button Name="action" Click="CellByCell" Height="20" Width="20" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <DataGrid Height="auto" Width="auto" HorizontalAlignment="Center" 
         Name="dataGrid" VerticalAlignment="Center" RowHeight="30" MinColumnWidth="50"  ColumnWidth="auto" />
        <DataGrid Height="auto" Width="auto" HorizontalAlignment="Right"  
         Name="dataCountGrid" VerticalAlignment="Center" RowHeight="30" MinColumnWidth="50"  ColumnWidth="auto" />
        <DataGrid Height="auto" Width="auto" HorizontalAlignment="Center"  
         Name="dataResultGrid" VerticalAlignment="Bottom" RowHeight="30" MinColumnWidth="50"  ColumnWidth="auto" />
    </Grid>
</Window>
